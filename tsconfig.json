{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es6", "es2015"],
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "esnext",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "index.ts",
    "types.d.ts",
    "react-native-simple-radio-button.d.ts",
    "react-native-calendar-heatmap.d.ts",
    "react-native-pie.d.ts",
    "humanize.d.ts",
    "modules.d.ts",
    "src/",
    "src/i18n/translations/*.json",
    "static/"
  ]
}
